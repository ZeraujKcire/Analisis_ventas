#!/bin/sh

cd ../3_DATA

# Se crean los archivos en R
for f in *; do
	if [ -d $f ];
	then
		cp ../1_ANALYSIS/analisis.r "$f"/analisis.r;
	fi
done;

# Se ejecutan los archivos en R.
for f in *; do
	if [ -d $f ];
	then
		cd "$f";
		Rscript analisis.r > output.txt && echo "/$f done." || echo "/$f failed";
		cd ..;
	fi;
done;
